<Window x:Class="PrismCore.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title.Value}" Height="350" Width="525" >
    <Grid>
        <!--<ContentControl prism:RegionManager.RegionName="ContentRegion" />-->
        <StackPanel>
            <Button Content="コントロールテンプレート" Command="{Binding ShowControlTemplateView}"/>
            <Button Content="アコーディオン" Command="{Binding ShowExpanderView}"/>
            <Button Content="ドラッグ機能" Command="{Binding ShowDraggableControlView}"/>
        </StackPanel>
    </Grid>
</Window>
